<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.LocalNotificationsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ingrese el titulo del mensaje" />
            <Entry x:Name="txtTitleBadge" />
            <Label Text="Ingrese el texto del mensaje" />
            <Entry x:Name="txtTextBadge" />
            <Label Text="Ingrese el tiempo" />
            <Entry x:Name="txtTimeBadge" />
            <Button Text="Ejecutar" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>